{
	"name": "Flutter Windows Dev",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "flutter-dev",
	"workspaceFolder": "/home/flutteruser/app",
	"remoteUser": "flutteruser",

	// Use Docker's special DNS name. This will resolve to the correct host IP automatically.
	"containerEnv": {
		"ADB_SERVER_HOST": "host.docker.internal"
	},

	// The postStartCommand will now also use the dynamic DNS name.
	"postStartCommand": "adb connect host.docker.internal:5555",

	"customizations": {
		"vscode": {
			"extensions": [
				"Dart-Code.flutter",
				"Dart-Code.dart-code"
			]
		}
	}
}